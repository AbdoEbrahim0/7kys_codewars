#include<vector>
using namespace std;
//{{3, 2, 1, 0}, {4, 6, 5, 3, 2}, {9, 8, 7, 4}}
long elementsSum(const std::vector<std::vector<int>>& arr, int d = 0) {
    int sum = 0;
    int two = arr.size()-1 ;
    for (vector<int> val : arr)
    {
        if (two < val.size())
        {
            sum += val.at(two);
            two--;
        }
        else
        {
            sum += d;
            two--;
        }

    }
    return sum;
}
